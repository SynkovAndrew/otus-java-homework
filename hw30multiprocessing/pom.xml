    <modelVersion>4.0.0</modelVersion>

    <groupId>com.otus.java</groupId>
    <artifactId>hw30-multiprocessing</artifactId>
    <version>1.0</version>
    <packaging>pom</packaging>

    <modules>
        <module>hw30frontendclient</module>
        <module>hw30databaseclient</module>
        <module>hw30messageserver</module>
